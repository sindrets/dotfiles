[user]
	email = sindrets@gmail.com
	name = Sindre T. Str√∏m

[core]
	pager = delta

[init]
	defaultBranch = main

[submodule]
	recurse = false

[pull]
	rebase = true

[branch]
	sort = authordate

[interactive]
	diffFilter = delta --color-only

[diff]
	tool = nvimdiff

[difftool "nvimdiff"]
	cmd = nvim -d $LOCAL $REMOTE

[rebase]
	autoStash = true

[merge]
	tool = nvimmerge
	conflictstyle = zdiff3

[mergetool]
	hideResolved = true

[mergetool "nvimmerge"]
	cmd = nvim -d "$MERGED" "$BASE" "$LOCAL" "$REMOTE"

[delta]
	features = line-numbers decorations
	whitespace-error-style = 22 reverse
	syntax-theme = base16
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
[alias]
	lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %C(bold blue)<%an> %Cgreen(%cr)%Creset' --abbrev-commit
	wt = "!f() { source $HOME/.config/git/lib.sh && git_wt $@; }; f"
	pr-checkout = "!f() { \
		pr-fetch \"$1\" && \
		git checkout \"pr/$1\"; \
	}; f"
	pr-wt = "!f() { \
		local common_dir=\"$(git rev-parse --path-format=absolute --git-common-dir)\"; \
		local bname=\"pr/$1\"; \
		pr-fetch \"$1\" && \
		git worktree add \"$common_dir/trees/$bname\" \"$bname\"; \
	}; f"
	stash-keep = !git stash store $(git stash create)
[credential "https://github.com"]
	helper = !/usr/bin/gh auth git-credential
[credential "https://gist.github.com"]
	helper = !/usr/bin/gh auth git-credential
