fg = #efefef

c1 = #002038
c2 = #15b097
c3 = #1fc294
c4 = #67e191
c5 = #afd26d

[bar/main]
monitor = ${env:monitor_primary}
width = 100%
height = 27
radius = 0
fixed-center = true

background = ${color.bg}
foreground = ${color.fg}

line-size = 3
line-color =

border-size = 0
border-color =

padding-left = 0
padding-right = 2

module-margin-left = 1
module-margin-right = 2

font-0 = "Iosevka Term:weight=bold:size=10;1"
font-1 = "Noto Color Emoji:scale=10"
font-2 = "Material Design Icons:size=12;1"
font-3 = "Source Han Sans:size=10;1"
font-4 = "Font Awesome 5 Brands:size=10;1"
font-5 = "GothamRounded:style=semi-light:size=10;1"
#font-1 = "Font Awesome 5 Free:style=Solid:size=10;1"

modules-left = i3 player
modules-center = date
modules-right = cpu-temp wlan eth 1password redshift insync update-indicator battery pulseaudio-tail powermenu

tray-position = none
;tray-padding = 10

cursor-click = pointer
cursor-scroll = ns-resize

include-file = ~/.config/polybar/custom.ini

[module/i3]
type = internal/i3
format = <label-state> <label-mode>
index-sort = true
wrapping-scroll = false
; This will split the workspace name on ':'
strip-wsnumbers = true
; Use fuzzy (partial) matching on labels when assigning 
; icons to workspaces
; Example: code;♚ will apply the icon to all workspaces 
; containing 'code' in the label
; Default: false
fuzzy-match = true

label-mode-background = ${color.c3}
label-mode-foreground = ${color.c1}
label-mode-padding = 2

label-focused = %icon%%name%
label-focused-background = ${color.c3}
label-focused-foreground = ${color.fg}
label-focused-padding = 2

label-unfocused = %icon%%name%
label-unfocused-background = ${color.c3}
label-unfocused-foreground = ${color.c1}
label-unfocused-padding = 2

label-visible = %icon%%name%
label-visible-background = ${color.c3}
label-visible-foreground = ${color.c1}
label-visible-padding = 2

label-urgent = %icon%%name%
label-urgent-background = ${color.c5}
label-urgent-foreground = ${color.c1}
label-urgent-padding = 2

ws-icon-0 = ssh;

[module/player]
type = custom/script
exec = "~/.config/i3/scripts/playerctl-utils.sh --follow"
label-font = 6
tail = true
click-left = ~/.config/i3/scripts/playerctl-utils.sh --use-active play-pause
click-right = pkill -USR1 -f "playerctl-utils.sh --follow"

[module/wlan]
type = internal/network
interface = ${env:WLAN}
interval = 3.0

format-connected = <ramp-signal> <label-connected>
format-connected-foreground = ${color.c1}
format-connected-background = ${color.c4}
format-connected-padding = 2
label-connected = %{A1:kitty --class kitty_FLOAT sudo wifi-menu:}%essid%%{A}

format-disconnected =

ramp-signal-0 = 冷
ramp-signal-1 = 爛
ramp-signal-2 = 嵐
ramp-signal-3 = 襤
ramp-signal-4 = 蠟
ramp-signal-foreground = ${color.c1}

[module/eth]
type = internal/network
interface = ${env:ETH}
interval = 3.0

format-connected-padding = 2
format-connected-foreground = ${color.c1}
format-connected-background = ${color.c4}
format-connected-prefix = " "
format-connected-prefix-foreground = ${color.c1}
label-connected = %local_ip%

format-disconnected =

[module/date]
type = internal/date
interval = 1

date =
date-alt = " %Y.%m.%d"

time = %H:%M
time-alt = %H:%M:%S

format-prefix = 肋
format-foreground = ${color.c1}
format-background = ${color.c2}
format-padding = 2

label = %date% %time%

[module/powermenu]
type = custom/menu

expand-right = true

format-spacing = 1

label-open = 
label-open-foreground = ${color.c4}
label-close =  cancel
label-close-foreground = ${color.c4}
label-separator = |
label-separator-foreground = ${color.c4}

menu-0-0 = reboot
menu-0-0-exec = menu-open-1
menu-0-1 = power off
menu-0-1-exec = menu-open-2
menu-0-2 = log off
menu-0-2-exec = menu-open-3

menu-1-0 = cancel
menu-1-0-exec = menu-open-0
menu-1-1 = reboot
menu-1-1-exec = reboot

menu-2-0 = power off
menu-2-0-exec = poweroff
menu-2-1 = cancel
menu-2-1-exec = menu-open-0

menu-3-0 = log off
menu-3-0-exec = pkill -KILL -u $USER
menu-3-1 = cancel
menu-3-1-exec = menu-open-0

[module/update-indicator]
type = custom/script
exec = ~/.config/polybar/scripts/update-indicator.sh
interval = 300
format-prefix = " "
click-left = pamac-manager --updates &

[module/pulseaudio-tail]
type = custom/script
exec = ~/.config/polybar/scripts/pulseaudio-tail.sh
tail = true
click-right = exec pavucontrol-qt &
click-left = ~/.config/polybar/scripts/pulseaudio-tail.sh --mute
scroll-up = ~/.config/polybar/scripts/pulseaudio-tail.sh --up
scroll-down = ~/.config/polybar/scripts/pulseaudio-tail.sh --down

[module/insync]
type = custom/script
click-left = exec insync show
exec = echo ""

[module/redshift]
type = custom/script
click-left = exec killall -USR1 redshift
exec = echo ""

[module/1password]
type = custom/script
click-left = exec google-chrome-stable --app="https://fam-strom.1password.com/vaults/all/allitems/" &
exec = echo ""

[module/cpu-temp]
type = custom/script
exec = ~/.config/polybar/scripts/cpu-temp.sh
format-prefix = " "
format-padding = 2
format-foreground = ${color.c1}
format-background = ${color.c4}
format-prefix-foreground = ${color.c1}
interval = 5

[settings]
screenchange-reload = true

